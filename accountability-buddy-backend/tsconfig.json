{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,

    // Updated type roots for better resolution
    "typeRoots": [
      "./node_modules/@types", // Default global types
      "./@types", // Global custom types outside src
      "./src/types" // Project-specific types inside src
    ],

    // Explicitly include types
    "types": ["node", "express"],

    // Additional options for better debugging and enforcement
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true, // Ensure each file is treated as a separate module

    // Compatibility options
    "allowSyntheticDefaultImports": true,
    "incremental": true // Enable incremental builds
  },
  "include": [
    "src/**/*", // Include all source files
    "types/**/*.d.ts", // Include custom types folder inside src
    "@types/**/*.d.ts" // Include types from @types directory outside src
  ],
  "exclude": [
    "node_modules", // Exclude node_modules for performance
    "dist", // Exclude compiled output folder
    "**/*.test.ts", // Exclude test files
    "**/*.spec.ts", // Exclude spec files
    ".vscode", // Exclude editor-specific files
    ".env", // Exclude environment variable files
    "coverage" // Exclude coverage output folder
  ]
}
