# ========================
# API Configuration
# ========================
REACT_APP_API_URL=${BASE_URL}/api

# ========================
# General Application Settings
# ========================
REACT_APP_NAME=${APP_NAME}
REACT_APP_VERSION=${APP_VERSION}

# ========================
# Stripe Payment Gateway
# ========================
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX

# ========================
# Google Analytics
# ========================
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ========================
# Sentry (Error Tracking)
# ========================
REACT_APP_SENTRY_DSN=https://exampleSentryDsn@sentry.io/project-id

# ========================
# Localization Settings
# ========================
REACT_APP_LANG=${DEFAULT_LANGUAGE}
REACT_APP_DEFAULT_LANGUAGE=${DEFAULT_LANGUAGE}

# ========================
# Theme Settings
# ========================
REACT_APP_THEME_MODE=light

# ========================
# Build Optimization (Optional)
# ========================
SKIP_PREFLIGHT_CHECK=true

# ========================
# Optional: Authentication
# ========================
REACT_APP_AUTH_PROVIDER_URL=${AUTH_URL}
REACT_APP_AUTH_CLIENT_ID=${CLIENT_ID}
