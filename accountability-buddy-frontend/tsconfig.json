{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "types": ["jest", "@testing-library/jest-dom", "cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "cypress/*": ["cypress/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    ".next/types/**/*.ts",
    "cypress/**/*.ts",
    "src/**/*.test.{ts,tsx}",
    "src/**/*.module.css"
  ],
  "exclude": [
    "node_modules",
    "cypress/**/*.js",
    "src/**/__mocks__/*",
    "src/**/config/*.js"
  ]
}
